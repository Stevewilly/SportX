<!DOCTYPE html>
<html>
<head>
    <title>Login User</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script type="text/javascript">
        function validate(){
            var mail = document.login.emailLogin.value;
            var password = document.login.passLogin.value;

            var status = false;

            if(mail.length > 1){
                document.getElementById("mailmsg").innerHTML ="<img src='/images/checked.png' style='height:10px;width:10px;' /> Email valid";
                status = true;
            }
            else {
                document.getElementById("mailmsg").innerHTML ="<img src='/images/unchecked.png' style='height:10px;width:10px;' /> Please enter your username" ;
                status= false;
            }

            if(password.length < 6 ){
                document.getElementById("passmsg").innerHTML ="<img src='/images/unchecked.png' style='height:10px;width:10px;'/> Password must be at least 6 char long";
                status = false;
            }
            else {
                document.getElementById("passmsg").innerHTML ="<img src='/images/checked.png' style='height:10px;width:10px;'/> Password valid ";

            }
            return status;
        }
    </script>
    <style>
        body {
            background-image: url('/images/backlogin.png');
            color: white;
            -moz-background-origin: content-box;
            background-size: cover;
        }
    </style>

</head>
<body>
<header>



</header>
<main>
    <div class="container" align="center">
        <h2 class="heading-signin" align="center">Sign in</h2>
        <h4 class="subheading-signin" > I'am a sport talent</h4>
        <!--show message that comes with authentication-->
        <% if(message.length > 0){%>
        <div class ="alert alert-danger"><%= message %></div>
       <% }%>
        <form class="signin-form" name="login" onsubmit="return validate()" action="/login" method="POST">

            <div class="form-group" >

                <input type="email" class="form-control" name="emailLogin" id="email" placeholder="Email"/></div><span name="mailmsg"></span>
            <div class="form-group" ><input type="password" class="form-control" name="passLogin" id="phone" placeholder="Password" /><span name="passmsg"></span>

            </div>

            <div >
                <label>
                    <input class="custom-checkbox" type="checkbox" value="remember-me" > Remember me
                </label>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-primary" value="Submit" />
                </div>
            </div>

        </form>
        <div>
            <label>Forget password? <a href="#" >Click Here</a></label>
            <label>Don't have an Account? <a href="/register" >Register here</a></label>

        </div>

    </div> <!-- /container -->
</main>
<footer style="margin-top: 220px">
    <p align="center">Copyright 2017, Steve Willy</p>
</footer>

</body>
</html>