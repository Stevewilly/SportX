    function preview(data) {
        if (data.files && data.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#profileImage').
                attr('src', e.target.result);
            }
            reader.readAsDataURL(data.files[0])
        }
    }

</script>

